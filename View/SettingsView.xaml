<UserControl x:Class="Chess.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="833"
             >

    <UserControl.Resources>
        <!-- GRAY BUTTON STYLE -->
        <Style x:Key="GrayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <!-- Dark Gray -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect for Gray Button -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                                <!-- Medium Gray -->
                            </Trigger>

                            <!-- Click Effect for Gray Button -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <!-- Darkest Gray -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#252525">


        <Button Style="{StaticResource GrayButtonStyle}" 
     HorizontalAlignment="Left"
     Margin="14,14,0,0" 
     VerticalAlignment="Top" 
     Height="48" 
     Width="50"
     Background="#444"
     Command="{Binding  NavigateToHomeViewCommand}">
            <Button.Content>
                <Label Content="←"
            FontSize="60"
            Margin="0,-28,5,0"
            FontWeight="UltraBold"
            Foreground="White"/>
            </Button.Content>
        </Button>

        <Label FontWeight="Bold" Foreground="White" FontSize="40" Content="Volume" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="White" FontSize="20" Content="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,249,413,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Foreground="#49c3d8" FontSize="20" Content="%" HorizontalAlignment="Left" Margin="413,249,0,0" VerticalAlignment="Top"/>
        <Slider   HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Width="325" Height="48"/>




    </Grid>
</UserControl>
