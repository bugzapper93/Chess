<UserControl x:Class="Chess.View.MpPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="833"
             Background="#252525">
    <UserControl.Resources>
        <!-- BLUE BUTTON STYLE -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#49c3d8"/>
            <!-- Light Blue -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect for Blue Button -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#37a1b9"/>
                                <!-- Darker Blue -->
                            </Trigger>

                            <!-- Click Effect for Blue Button -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#49c3d8"/>
                                <!-- Even Darker Blue -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GRAY BUTTON STYLE -->
        <Style x:Key="GrayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <!-- Dark Gray -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect for Gray Button -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                                <!-- Medium Gray -->
                            </Trigger>

                            <!-- Click Effect for Gray Button -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <!-- Darkest Gray -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1ca530"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#188929"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1ca530 "/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




        <Style x:Key="OrangeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#dd8a1c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#c97d1a"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#dd8a1c   "/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button Style="{StaticResource GrayButtonStyle}" 
    HorizontalAlignment="Left"
    Margin="14,14,0,0" 
    VerticalAlignment="Top" 
    Height="48" 
    Width="50"
    Background="#444"
    Command="{Binding  NavigateToHomeViewCommand}">
            <Button.Content>
                <Label Content="←"
           FontSize="60"
           Margin="0,-28,5,0"
           FontWeight="UltraBold"
           Foreground="White"/>
            </Button.Content>
        </Button>

        <Canvas Background="#1e1e1e " Margin="78,14,15,388">
            <Label FontSize="25" Foreground="White" FontWeight="Bold" Content="Nick:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="2"/>
            <TextBox BorderThickness="0" FontSize="15" Foreground="White" TextAlignment="center" VerticalContentAlignment="Center" Background="#444" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="204" Height="36" Canvas.Left="76" Canvas.Top="6"/>
            <Button Style="{StaticResource BlueButtonStyle}" Content="Host Lobby" FontSize="20  " HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="134" Canvas.Left="294" Canvas.Top="6"/>
            <Button Style="{StaticResource GreenButtonStyle}" Content="Join Lobby" FontSize="20  " HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="134" Canvas.Left="444" Canvas.Top="6"/>
            <Button Style="{StaticResource GrayButtonStyle}" Content="Leave Lobby" FontSize="20  " HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="134" Canvas.Left="592" Canvas.Top="6"/>
        </Canvas>
        <Canvas Background="#1e1e1e " Margin="14,79,628,16">
            <Label FontSize="20" Foreground="White" FontWeight="Bold" Content="Player list (     ):" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="5"/>
            <Label FontSize="20" Foreground="#49c3d8" HorizontalContentAlignment="Center" FontWeight="Bold" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="101" Width="56" Canvas.Top="1"/>
            <TextBox IsEnabled="false" BorderThickness="0" FontSize="15" Foreground="White" TextAlignment="center" VerticalContentAlignment="Center" Background="#444" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Height="303" Canvas.Left="10" Canvas.Top="40"/>
        </Canvas>

        <Canvas Background="#1e1e1e " Margin="602,79,15,16">
            <Label FontSize="20" Foreground="White" FontWeight="Bold" Content="Chat:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="3" Canvas.Left="4"/>
            <TextBox IsEnabled="false" BorderThickness="0" FontSize="15" Foreground="White" TextAlignment="center" VerticalContentAlignment="Center" Background="#444" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="261" Canvas.Left="10" Canvas.Top="40"/>
            <Button Style="{StaticResource GrayButtonStyle}" Content="Send" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Height="36" Width="52" Canvas.Left="154" Canvas.Top="309"/>
            <TextBox BorderThickness="0" FontSize="10" Foreground="White" TextAlignment="Left" VerticalContentAlignment="Center" Background="#252525" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="139" Height="36" Canvas.Left="10" Canvas.Top="309"/>
        </Canvas>
        <Canvas Background="#1e1e1e " Margin="224,79,250,77">
            <Label FontSize="20" Foreground="White" FontWeight="Bold" Content="Available hosts:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="3" Canvas.Left="5"/>
            <Button Style="{StaticResource OrangeButtonStyle}" Content="Refresh" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="103" Canvas.Left="246" Canvas.Top="6" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.655"/>
                        <RotateTransform/>
                        <TranslateTransform X="0.189"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <TextBox IsEnabled="false" BorderThickness="0" FontSize="15" Foreground="White" TextAlignment="center" VerticalContentAlignment="Center" Background="#444" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="342" Height="244" Canvas.Left="10" Canvas.Top="40"/>
        </Canvas>

        <Canvas Background="#1e1e1e " Margin="224,385,250,16">
            <Button Style="{StaticResource BlueButtonStyle}" Command="{Binding NavigateToGameViewCommand}" Content="Start Game" FontSize="20  " HorizontalAlignment="Left" VerticalAlignment="Center" Height="36" Width="339" Canvas.Left="10" Canvas.Top="6"/>
        </Canvas>
    </Grid>
</UserControl>
